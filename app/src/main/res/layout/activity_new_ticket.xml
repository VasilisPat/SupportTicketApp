<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTicketActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_new_ticket"
                android:layout_width="81dp"
                android:layout_height="69dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="2dp"
                android:contentDescription="@string/description_imageView_new_ticket_icon"
                app:layout_constraintBottom_toTopOf="@+id/editTextNumber_ticket_id"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_label_technician"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ticket_plus_120px" />

            <!-- Technician -->

            <TextView
                android:id="@+id/textView_label_technician"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="122dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="4dp"
                android:text="@string/label_technician"
                android:textColor="@color/blue_gray_800"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/editTextNumber_ticket_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_label_ticket_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:text="@string/label_ticket_id"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_technician" />

            <TextView
                android:id="@+id/textView_label_technician_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/label_technician_name"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_ticket_id" />

            <EditText
                android:id="@+id/editTextNumber_ticket_id"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:enabled="false"
                android:hint="@string/hint_ticket_id"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/spinner_technician_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_label_ticket_id"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_technician"
                tools:ignore="TouchTargetSizeCheck" />

            <Spinner
                android:id="@+id/spinner_technician_name"
                android:layout_width="256dp"
                android:layout_height="45dp"
                android:layout_marginStart="41dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:contentDescription="@string/description_spinner_ticket_id_content"
                android:ems="10"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_label_technician_name"
                app:layout_constraintTop_toBottomOf="@+id/editTextNumber_ticket_id"
                tools:ignore="TouchTargetSizeCheck" />

            <!-- Client -->

            <TextView
                android:id="@+id/textView_label_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="160dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="160dp"
                android:text="@string/label_client"
                android:textColor="@color/blue_gray_800"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner_technician_name" />

            <TextView
                android:id="@+id/textView_label_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="@string/label_technician_name"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_client" />

            <TextView
                android:id="@+id/textView_label_client_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/label_client_address"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_client_name" />

            <TextView
                android:id="@+id/textView_label_client_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/label_client_phone"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_client_address" />

            <TextView
                android:id="@+id/textView_label_client_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/label_client_email"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_client_phone" />

            <EditText
                android:id="@+id/editTextText_client_name"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="39dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:autofillHints="name"
                android:ems="10"
                android:hint="@string/hint_client_name"
                android:inputType="textCapWords"
                android:textColorHint="@color/hint_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_label_client_name"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_client"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editText_client_address"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:autofillHints="postalAddress"
                android:ems="10"
                android:hint="@string/hint_client_address"
                android:inputType="textCapWords"
                android:textColorHint="@color/hint_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_label_client_address"
                app:layout_constraintTop_toBottomOf="@+id/editTextText_client_name"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editTextPhone_client_phone"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:autofillHints="phone"
                android:ems="10"
                android:hint="@string/hint_client_phone"
                android:inputType="phone"
                android:textColorHint="@color/hint_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_label_client_phone"
                app:layout_constraintTop_toBottomOf="@+id/editText_client_address"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editTextEmail_client_email"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="43dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:autofillHints="emailAddress"
                android:ems="10"
                android:hint="@string/hint_client_email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/hint_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_label_client_email"
                app:layout_constraintTop_toBottomOf="@+id/editTextPhone_client_phone"
                tools:ignore="TouchTargetSizeCheck" />

            <!-- Labor -->

            <TextView
                android:id="@+id/textView_label_labor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="165dp"
                android:text="@string/label_labor"
                android:textColor="@color/blue_gray_800"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextEmail_client_email" />

            <TextView
                android:id="@+id/textView_label_labor_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="@string/label_labor_date"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_labor" />

            <TextView
                android:id="@+id/textView_label_labor_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/label_labor_type"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_labor_date" />

            <TextView
                android:id="@+id/textView_label_labor_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/label_labor_hours"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_labor_type" />

            <TextView
                android:id="@+id/textView_label_labor_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/label_labor_description"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_labor_hours" />

            <EditText
                android:id="@+id/editTextDate_labor_date"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_label_labor_date"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_labor"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <Spinner
                android:id="@+id/spinner_labor_type"
                android:layout_width="256dp"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:contentDescription="@string/description_spinner_labor_type_content"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.533"
                app:layout_constraintStart_toEndOf="@+id/textView_label_labor_type"
                app:layout_constraintTop_toBottomOf="@+id/editTextDate_labor_date"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editTextNumberDecimal_labor_hours"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="27dp"
                android:ems="10"
                android:hint="@string/hint_labor_hours"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textColorHint="@color/hint_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_label_labor_hours"
                app:layout_constraintTop_toBottomOf="@+id/spinner_labor_type"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editTextMultiLine_labor_description"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="22dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="@string/hint_labor_description"
                android:importantForAutofill="no"
                android:inputType="textMultiLine|textCapSentences"
                android:textColorHint="@color/hint_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal_labor_hours"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/button_save_ticket"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="79dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="22dp"
                android:text="@string/button_save_ticket"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.055"
                app:layout_constraintStart_toEndOf="@+id/button_cancel_ticket"
                app:layout_constraintTop_toBottomOf="@+id/editTextMultiLine_labor_description" />

            <Button
                android:id="@+id/button_cancel_ticket"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="22dp"
                android:text="@string/button_cancel_ticket"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextMultiLine_labor_description" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>