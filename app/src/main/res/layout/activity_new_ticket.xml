<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTicketActivity">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:contentDescription="@string/description_imageView_new_ticket_icon"
                android:id="@+id/imageView_new_ticket"
                android:layout_width="81dp"
                android:layout_height="69dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintBottom_toTopOf="@+id/editTextNumber_technician_id"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_label_technician"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ticket_plus_120px" />

            <!-- Technician -->

            <TextView
                android:id="@+id/textView_label_technician"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="122dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="4dp"
                android:text="@string/label_technician"
                android:textColor="@color/blue_gray_800"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/editTextNumber_technician_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_label_technician_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:text="@string/label_id"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_technician" />

            <TextView
                android:id="@+id/textView_label_technician_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/label_name"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_technician_id" />

            <EditText
                android:id="@+id/editTextNumber_technician_id"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="69dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:hint="@string/hint_technician_id"
                android:inputType="number"
                android:textColorHint="@color/hint_gray"
                app:layout_constraintBottom_toTopOf="@+id/editTextText_technician_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_label_technician_id"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_technician"
                tools:ignore="TouchTargetSizeCheck"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/editTextText_technician_name"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:ems="10"
                android:autofillHints="name"
                android:hint="@string/hint_technician_name"
                android:inputType="textCapWords"
                android:textColorHint="@color/hint_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_label_technician_name"
                app:layout_constraintTop_toBottomOf="@+id/editTextNumber_technician_id"
                tools:ignore="TouchTargetSizeCheck" />

            <!-- Client -->

            <TextView
                android:id="@+id/textView_label_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="160dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="160dp"
                android:text="@string/label_client"
                android:textColor="@color/blue_gray_800"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextText_technician_name" />

            <TextView
                android:id="@+id/textView_label_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="@string/label_name"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_client" />

            <TextView
                android:id="@+id/textView_label_client_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/label_address"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_client_name" />

            <TextView
                android:id="@+id/textView_label_client_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/label_phone"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_client_address" />

            <TextView
                android:id="@+id/textView_label_client_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/label_email"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_client_phone" />

            <EditText
                android:id="@+id/editTextText_client_name"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="39dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:autofillHints="name"
                android:ems="10"
                android:hint="@string/hint_client_name"
                android:inputType="textCapWords"
                android:textColorHint="@color/hint_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_label_client_name"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_client"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editText_client_address"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:autofillHints="postalAddress"
                android:ems="10"
                android:hint="@string/hint_client_address"
                android:inputType="textCapWords"
                android:textColorHint="@color/hint_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_label_client_address"
                app:layout_constraintTop_toBottomOf="@+id/editTextText_client_name"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editTextPhone_client_phone"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:autofillHints="phone"
                android:ems="10"
                android:hint="@string/hint_client_phone"
                android:inputType="phone"
                android:textColorHint="@color/hint_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_label_client_phone"
                app:layout_constraintTop_toBottomOf="@+id/editText_client_address"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editTextEmail_client_email"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="43dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:autofillHints="emailAddress"
                android:ems="10"
                android:hint="@string/hint_client_email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/hint_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_label_client_email"
                app:layout_constraintTop_toBottomOf="@+id/editTextPhone_client_phone"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView_label_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="165dp"
                android:text="@string/label_work"
                android:textColor="@color/blue_gray_800"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextEmail_client_email" />

            <TextView
                android:id="@+id/textView_label_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="@string/label_date"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_work" />

            <TextView
                android:id="@+id/textView_label_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/label_type"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_date" />

            <EditText
                android:id="@+id/editTextDate_date"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:ems="10"
                android:inputType="date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_label_date"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_work" />

            <Spinner
                android:contentDescription="@string/description_spinner_content"
                android:id="@+id/spinner_type"
                android:layout_width="256dp"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_label_type"
                app:layout_constraintTop_toBottomOf="@+id/editTextDate_date"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/label_description"
                android:textColor="@color/blue_gray_800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_type" />

            <!-- Work -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>